<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/wTitle"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exercise_description"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@+id/exercise_description"
        android:ellipsize="end"
        android:text="Workout Title" />

    <TextView
        android:id="@+id/wComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Comment on the workout log" />

</RelativeLayout>
